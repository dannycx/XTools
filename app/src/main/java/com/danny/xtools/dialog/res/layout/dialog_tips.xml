<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_tips_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tips_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x_dp_40"
        android:text="@string/app_name"
        android:textSize="@dimen/x_sp_16"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/tips_divide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_dp_0_33"
        android:background="@color/color_divide"
        app:layout_constraintTop_toBottomOf="@id/tips_title" />

    <TextView
        android:id="@+id/tips_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_tip"
        android:textSize="@dimen/x_sp_18"
        android:gravity="center"
        android:layout_marginTop="@dimen/x_dp_13"
        android:layout_marginBottom="@dimen/x_dp_13"
        app:layout_constraintTop_toBottomOf="@id/tips_divide"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>